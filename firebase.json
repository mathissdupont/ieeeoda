{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "trailingSlash": false,

    "headers": [
      { "source": "**/*.html", "headers": [ { "key": "Cache-Control", "value": "no-cache" } ] },
      { "source": "**/*.{js,css,svg,png,jpg,woff,woff2}", "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ] }
    ],

    "redirects": [
      { "source": "/admin.html",   "destination": "/admin",   "type": 301 },
      { "source": "/panel.html",   "destination": "/panel",   "type": 301 },
      { "source": "/login.html",   "destination": "/login",   "type": 301 },
      { "source": "/account.html", "destination": "/account", "type": 301 },
      { "source": "/kiosk.html",   "destination": "/kiosk",   "type": 301 },
      { "source": "/docs.html",    "destination": "/docs",    "type": 301 },
      { "source": "/api.html",     "destination": "/api",     "type": 301 },
      { "source": "/gate.html",    "destination": "/gate",    "type": 301 }
    ],

    "rewrites": [
      { "source": "/sw.js", "destination": "/sw.js" }
    ]
  }
}
